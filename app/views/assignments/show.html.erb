<%- model_class = @assignment.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:assignment_type_id) %>:</strong></dt>
  <dd><%= @assignment.assignment_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:submission_type_id) %>:</strong></dt>
  <dd><%= @assignment.submission_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @assignment.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_due) %>:</strong></dt>
  <dd><%= @assignment.date_due %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              assignments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_path(@assignment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_path(@assignment),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
