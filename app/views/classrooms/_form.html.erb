<%= form_for @classroom, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :target => @classroom %>
  <div class="control-group">
    <%= f.label :teacher_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :teacher_id, User.all, :id, :first_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :grade_level_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :grade_level_id, GradeLevel.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :reference, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reference, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_start, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :date_start, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date_end, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :date_end, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                classrooms_path, :class => 'btn' %>
  </div>
<% end %>
