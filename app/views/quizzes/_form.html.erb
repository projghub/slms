<%= form_for @quiz, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render "shared/error_messages", :target => @quiz%>
  <div class="control-group">
    <%= f.label :assignment_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :assignment_id, Assignment.all, :id, :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                quizzes_path, :class => 'btn' %>
  </div>
<% end %>
